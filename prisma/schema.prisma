generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  telegramId  BigInt    @unique @map("telegram_id")
  username    String?
  language    String    @default("ru") // "ru" | "uz"
  timezone    String    @default("UTC+5")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  contacts       Contact[]
  contactHistory ContactHistory[]

  @@map("users")
}

model Contact {
  id              Int       @id @default(autoincrement())
  userId          Int       @map("user_id")
  name            String
  frequency       String    // "weekly" | "biweekly" | "monthly" | "quarterly"
  reminderTime    String    @map("reminder_time") // "09:00", "10:00", etc.
  notes           String?   // Optional notes about the contact
  birthday        DateTime? // Optional birthday (only month and day matter)
  lastContactAt   DateTime? @map("last_contact_at")
  nextReminderAt  DateTime  @map("next_reminder_at")
  snoozedUntil    DateTime? @map("snoozed_until")
  birthdayReminderSentYear Int? @map("birthday_reminder_sent_year") // Track 3-day reminder
  birthdayWishSentYear     Int? @map("birthday_wish_sent_year")     // Track on-the-day wish
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  history         ContactHistory[]

  @@map("contacts")
}

model ContactHistory {
  id        Int      @id @default(autoincrement())
  contactId Int      @map("contact_id")
  userId    Int      @map("user_id")
  eventType String   @map("event_type") // "contacted"
  note      String?  // Optional note about what you talked about
  createdAt DateTime @default(now()) @map("created_at")

  contact   Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("contact_history")
}

// Analytics events for tracking user activity
model AnalyticsEvent {
  id        Int      @id @default(autoincrement())
  userId    Int?     @map("user_id") // Optional - some events may be anonymous
  event     String   // Event type: app_opened, contact_created, etc.
  metadata  Json?    // Optional extra data (e.g., { contactId: 123 })
  createdAt DateTime @default(now()) @map("created_at")

  @@index([event])
  @@index([userId])
  @@index([createdAt])
  @@map("analytics_events")
}
